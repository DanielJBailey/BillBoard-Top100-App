<h1 class="page-title">Top 100 <%= " #{@board.name}" %></h1>
<table>
    <thead>
    </thead>
    <tbody>
        <tr>
            <th>Position</th>
            <th>Artist</th>
        </tr>
        <% @counter = 1 %>
        <% @artists.each do | artist | %>
            <tr>
                <td><%= @counter %></td>
                <td><%= link_to artist.name, board_artist_path(@board, artist) %></td>
            </tr>
            <% @counter += 1 %>
        <% end %>
        
    </tbody>
</table>
<%= link_to "Edit Board Name", edit_board_path(@board), class: "body-button" %>

