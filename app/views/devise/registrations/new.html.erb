<h2 class="heading">Sign up</h2>

<div class="sign-up-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", placeholder: "Email", class: "email"%>
    </div>

    <div class="field">
      <%= f.text_field :first_name, required: true, placeholder: "First Name", class: "name"%>
    </div>

    <div class="field">
      <%= f.text_field :last_name, required: true, placeholder: "Last Name", class: "name"%>
    </div>

    <div class="field">
      <%= f.password_field :password, required: true, autocomplete: "new-password", placeholder: "Password", class: "password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm password", class: "password"%>
    </div>

    <div class="actions">
      <%= f.submit "Sign Up", class: "sign-up"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


